<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/start"

    tools:context="com.heartandsoulcafe.heartandsoul.WelcomeActivity">

    <include layout="@layout/toolbar"
       android:id="@+id/my_toolbar"/>


    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:id="@+id/bSignin"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tvGotohome" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:id="@+id/bSignup"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/bSignin"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:layout_alignStart="@+id/tvGotohome"
        android:layout_alignEnd="@+id/tvGotohome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Goto Homepage"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:id="@+id/tvGotohome"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/bSignup"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
